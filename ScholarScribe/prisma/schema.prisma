generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Source {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  type      String //need to do work on enum
  title     String?
  URL       String?
  userid    String
  author    Author[]
  year      String?
  publisher String?
}

type Author {
  family String
  given  String
  suffix String?
}
