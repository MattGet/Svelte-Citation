// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Source {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  type      String
  title     String?
  URL       String?
  userid    String
  author    Author[]
  date      Date?
  publisher String?
  keywords  String[]
}

type Author {
  family String
  given  String
  suffix String?
}

type Date {
  year  String
  month String?
  day   String?
}
