// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Source {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  type      Type
  title     String?
  URL       String?
  userid    String
  author    Author[]
  date      Date?
  publisher String?
}

enum Type {
  webpage
  article
  book
}

type Author {
  family String
  given  String
  suffix String?
}

type Date {
  year  String
  month Month?
  day   String?
}

enum Month {
  January
  Febuary
  March
  April
  May
  June
  July
  August
  September
  October
  November
  December
}
